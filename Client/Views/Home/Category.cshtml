@using DataAccess.Models;
@model IEnumerable<DataAccess.Models.Product>
<div id="content">
    <div id="content-left">
        <h3>CATEGORY</h3>
        <ul>
            @if (ViewData["Categories"] is not null)
            {
                @foreach (var category in (IEnumerable<Category>)ViewData["Categories"])
                {
                    <a asp-controller="home" asp-action="category" asp-route-id="@category.CategoryId">
                    <li>@category.CategoryName</li></a>
                }
            }
        </ul>
    </div>
    <div id="content-right">
        <div class="path">Hot</b></div>
        <div class="content-main">
            @{
                foreach (var item in Model)
                {
                    {
                        <div class="product">
                            <a asp-controller="home" asp-action="detail" asp-route-id="@item.ProductId"><img src="~/img/1.jpg" width="100%" /></a>
                            <div class="name"><a href="detail.html">@Html.DisplayFor(modelItem => item.ProductName)</a></div>
                            <div class="price">$@Html.DisplayFor(modelItem => item.UnitPrice)</div>
                            <div><a href="">Buy now</a></div>
                        </div>
                    }
                }
            }
        </div>
    </div>
</div>

